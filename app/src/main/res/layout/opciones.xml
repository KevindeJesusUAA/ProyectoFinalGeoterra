<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo_degradado"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GEOTERRA"
            android:textSize="50dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/fondo_textview" />

        <Button
            android:id="@+id/btnRegresar"
            android:layout_width="253dp"
            android:layout_height="61dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="#FF99FF"
            android:text="Regresar"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txtIniciar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Iniciar Sesión"
            android:textSize="25dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:background="@drawable/fondo_descrip" />
        <TextView
            android:id="@+id/txtNombre"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:inputType="text"
            android:text="Ingresa tú correo electrónico"
            android:textAlignment="center"
            android:textColor="#020242"
            android:textSize="25dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/ingreso"
            android:layout_width="match_parent"
            android:layout_height="60dp"

            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:hint="Nombre"
            android:inputType="text"
            android:textAlignment="textEnd"
            android:textColor="#FFFFFF"
            android:textColorHint="#526FFF"
            android:backgroundTint="#0B34FF"
            android:textStyle="bold|italic"/>

        <TextView
            android:id="@+id/txtEdad"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="text"
            android:text="Ingresa tú contraseña"
            android:textAlignment="center"
            android:textColor="#020242"
            android:textSize="25dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/edad"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:hint="Edad"
            android:inputType="text"
            android:textAlignment="textEnd"
            android:textColor="#FFFFFF"
            android:textColorHint="#526FFF"
            android:backgroundTint="#0B34FF"
            android:textStyle="bold|italic"/>

        <ImageButton
            android:id="@+id/ingresarButton"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:text="Ingresar"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/ingresar"/>

        <TextView
            android:id="@+id/txtRegistrarnos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:background="@drawable/fondo_descrip" />

        <ImageButton
            android:id="@+id/registrarButton"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:text="Ingresar"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/registrar"/>
    </LinearLayout>

