<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_degradado"
    android:orientation="vertical">


    <Button
        android:id="@+id/btnRegresar"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"

        android:layout_marginTop="15dp"
        android:backgroundTint="#FF99FF"
        android:text="Regresar"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        />

    <Button
        android:id="@+id/cargarImagenButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cargar Imagen"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:backgroundTint="#FF99FF"
        android:textStyle="bold"
        android:layout_marginTop="5dp" />
    <TextView
        android:id="@+id/txtNombre"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="text"
        android:text="Ingresa tú nombre"
        android:textAlignment="center"
        android:textColor="#020242"
        android:textSize="25dp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/ingreso"
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"

        android:inputType="text"
        android:textAlignment="textEnd"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textStyle="bold|italic"/>
    <TextView
        android:id="@+id/txtcontra"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="text"
        android:text="Ingresa tú contraseña"
        android:textAlignment="center"
        android:textColor="#020242"
        android:textSize="25dp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/contra"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:inputType="textPassword"
        android:textAlignment="textEnd"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textStyle="bold|italic"/>

    <TextView
        android:id="@+id/txtEdad"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="text"
        android:text="Selecciona tú edad"
        android:textAlignment="center"
        android:textColor="#020242"
        android:textSize="25dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/edad"
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"

        android:inputType="number"
        android:textAlignment="textEnd"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textStyle="bold|italic"/>


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        />
        <Button
            android:id="@+id/color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Selecciona Fav Color"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:backgroundTint="#FF99FF"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/avanzarButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Avanzar"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:backgroundTint="#FF99FF"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp" />


</LinearLayout>

